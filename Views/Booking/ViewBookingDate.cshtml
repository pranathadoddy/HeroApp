
@{
    ViewData["Title"] = "ViewBookingDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewData["Title"] = "Home Page";
}
@model HeroApp.Models.IndexVm


<div class="col-md-6">
    <form id="form-view-booking-date"
          data-redirect-url="@Url.Action("Index","SearchProduct")">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" readonly name="name" id="name">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" readonly name="description" id="description"></textarea>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="text" class="form-control datepicker" name="date" id="date">
        </div>
        <button type="submit" id="submit-btn" class="btn btn-primary">View Price</button>
    </form>
</div>

@section Styles{ 
    <link rel="stylesheet" href="~/lib/datepicker/css/datepicker.min.css" />
}

@section Scripts{
    <script src="~/lib/datepicker/js/datepicker.min.js"></script>
    <script src="~/js/BookingDate.js"></script>
    <script type="text/javascript">
        var bookingDate = new BookingDate();
        bookingDate.Register();
    </script>
}