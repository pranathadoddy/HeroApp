
@{
    ViewData["Title"] = "ViewBookingDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewData["Title"] = "Home Page";
}
@model HeroApp.Models.IndexVm


<div class="col-md-6">
    <form id="form-view-booking-date"
          data-create-booking-url="@Url.Action("CreateBooking","Booking")">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" readonly name="name" id="name">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" readonly name="description" id="description"></textarea>
        </div>
        
    </form>
</div>
<div id="calendar" data-event-source-url="@Url.Action("GetAvailableSchedule","Booking")">

</div>

@section Styles{
    <link rel="stylesheet" href="~/lib/fullcalendar/main.css" />
}

@section Scripts{
    <script src="~/lib/fullcalendar/main.js"></script>
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/js/BookingDate.js"></script>
    <script type="text/javascript">
        var bookingDate = new BookingDate();
        bookingDate.Register();
    </script>
}